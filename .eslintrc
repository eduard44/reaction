---
settings:
    jsx: true
    ecmascript: 6

env:
    browser: true
    node: true

rules:
    brace-style: 2
    space-after-keywords: 2
    strict: 2
    no-comma-dangle: 2
    no-unused-expressions: 2
    block-scoped-var: 0
    eol-last: 2
    dot-notation: 2
    consistent-return: 2

    quotes: [1, 'single']
    max-len: [1, 120]

    valid-jsdoc: 1

    no-underscore-dangle: 1
    no-use-before-define: 1
    no-unused-vars: 0
    key-spacing: 1
    no-multi-spaces: 1
    no-undef: 0
